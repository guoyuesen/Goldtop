<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="21dip"
    android:paddingRight="21dip"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dip">
        <TextView
            android:id="@+id/init_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入手机号"
            android:textColor="#ff000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="33dip"
            android:layout_height="33dip"
            android:padding="10dip"
            android:layout_centerVertical="true"
            android:src="@mipmap/close1"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#f0f0f0"
        />
    <EditText
        android:id="@+id/dialog_name"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:layout_marginTop="21dip"
        android:background="@drawable/init_phone_dialog"
        android:paddingLeft="10dip"
        android:hint="请输入联系姓名"
        android:textColorHint="#ffbcbcbc"
        android:textSize="14sp"
        android:visibility="gone"
        />
    <EditText
        android:id="@+id/dialog_phone"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:layout_marginTop="21dip"
        android:background="@drawable/init_phone_dialog"
        android:paddingLeft="10dip"
        android:inputType="number"
        android:maxLength="11"
        android:hint="请输入联系手机号"
        android:textColorHint="#ffbcbcbc"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff9e9e9e"
        android:textSize="14sp"
        android:layout_marginTop="21dip"
        android:visibility="gone"
        />
        <TextView
            android:id="@+id/dialog_true"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="21dip"
            android:background="@drawable/init_phone_dialog1"
            android:text="提交"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="21dip"
            />
</LinearLayout>