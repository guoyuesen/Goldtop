<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/csxz_dialog_nr"
            android:layout_width="match_parent"
            android:layout_height="500dip"
            android:background="@drawable/zhihangxzbg"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择地区"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:textSize="20dip"
                    />
                <ImageView
                    android:id="@+id/csxz_dialog_close"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:padding="10dp"
                    android:src="@mipmap/close1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:paddingLeft="20dip"
                android:text="已选择"
                android:gravity="center_vertical"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:background="#f9f9f9"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/csxz_dialog_t1"
                    android:layout_width="150dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="20dip"
                    android:text=""
                    android:hint="请选择"
                    android:singleLine="true"
                    android:paddingLeft="10dip"
                    />
                <TextView
                    android:id="@+id/csxz_dialog_t2"
                    android:layout_width="100dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="20dip"
                    android:text=""
                    android:hint="请选择"
                    android:layout_marginLeft="150dip"
                    android:singleLine="true"
                    />
                <View
                    android:id="@+id/view_sheng"
                    android:layout_width="40dip"
                    android:layout_height="2dip"
                    android:background="@color/titlecolor"
                    android:layout_marginLeft="65dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dip"
                    />
                <View
                    android:id="@+id/view_shi"
                    android:layout_width="40dip"
                    android:layout_height="2dip"
                    android:background="@color/titlecolor"
                    android:layout_marginLeft="180dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dip"
                    />
            </RelativeLayout>

            <ListView
                android:id="@+id/csxz_dialog_ss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:padding="10dip"
                android:visibility="gone"
                ></ListView>
            <LinearLayout
                android:id="@+id/csxz_dialog_em"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ProgressBar
                    android:id="@+id/pb_load"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:indeterminateDrawable="@drawable/progressbar"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/pb_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无相关信息!"
                    />
            </LinearLayout>

        </LinearLayout>
</RelativeLayout>