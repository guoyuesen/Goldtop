<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_w_e"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付卡"
        android:textColor="#ff000000"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/item_repayment_bomm_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXXXXXXX（****）"
        android:textColor="#ff888888"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:textSize="15sp"
        />
    <ImageView
        android:layout_width="19dip"
        android:layout_height="19dip"
        android:src="@mipmap/home_activity_11"
        android:layout_toLeftOf="@id/item_repayment_bomm_bank"
        android:layout_marginTop="5dip"
        android:layout_marginRight="5dip"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="代还款开始时间"
        android:textColor="#ff000000"
        android:layout_marginTop="40dip"
        android:layout_marginLeft="5dip"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/item_repayment_bomm_creattime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff888888"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        android:layout_marginTop="40dip"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易单号"
        android:textColor="#ff000000"
        android:layout_marginTop="75dip"
        android:layout_marginLeft="5dip"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/item_repayment_bomm_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff888888"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        android:layout_marginTop="75dip"
        android:layout_marginBottom="5dip"
        android:textSize="15sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dip"
        android:background="#30c5c3c3"
        android:layout_marginTop="68dip"
        />
    </RelativeLayout>
    <Button
        android:id="@+id/item_repayment_bomm_creatplay"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/home_repay_r"
        android:layout_marginRight="50dip"
        android:layout_marginLeft="50dip"
        android:layout_marginTop="120dip"
        android:text="重设还款计划"
        android:textColor="#000000"
        android:layout_marginBottom="20dip"
        android:textSize="18sp"
        style="?android:attr/borderlessButtonStyle"
        />
    <Button
        android:id="@+id/item_repayment_bomm_cloesplay"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/home_repay_bommr"
        android:layout_marginRight="50dip"
        android:layout_marginLeft="50dip"
        android:layout_marginTop="190dip"
        android:text="取消还款计划"
        android:textColor="#000000"
        android:layout_marginBottom="20dip"
        android:textSize="18sp"
        />

</RelativeLayout>