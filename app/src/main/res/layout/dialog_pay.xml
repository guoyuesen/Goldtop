<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
<ImageView
    android:layout_width="50dip"
    android:layout_height="50dip"
    android:padding="15dip"
    android:src="@mipmap/close2"
    android:layout_alignParentRight="true"
    android:id="@+id/pay_dialog_close"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:text="选择支付方式"
        android:textColor="#ff333333"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#aaaaaa"
        android:layout_marginTop="50dip"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="124dip"
            android:layout_marginTop="50.5dip"
            >
            <RelativeLayout
                android:id="@+id/zfb"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="62dip">
            <ImageView
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:src="@mipmap/pay2"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="20dip"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="62dip"
                android:text="支付宝"
                android:textColor="#ff333333"
                android:layout_marginLeft="62dip"
                android:gravity="center"
                />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/wx"
                android:layout_width="match_parent"
                android:layout_marginTop="62dip"
                android:layout_height="62dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="62dip"
                android:text="微信支付"
                android:textColor="#ff333333"
                android:layout_marginLeft="62dip"

                android:gravity="center"
                />

            <ImageView
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:src="@mipmap/pay1"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="20dip"
                />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#cccccc"
                android:layout_marginTop="62dip"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="#cccccc"
                android:layout_marginTop="123.5dip"
                />
            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="42dip"
                android:layout_height="124dip"
                android:layout_alignParentRight="true"
                >
            <RadioButton
                android:id="@+id/x0"
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:layout_marginTop="20dip"
                android:button="@null"
                android:drawableLeft="@drawable/selector_radio"
            />
            <RadioButton
                android:id="@+id/x1"
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:checked="true"
                android:button="@null"
                android:drawableLeft="@drawable/selector_radio"
                android:layout_marginTop="40dip"
                />
            </RadioGroup>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_marginTop="174dip"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/titlecolor"
            android:layout_marginLeft="48dip"
            android:layout_marginRight="48dip"
            android:textColor="@color/white"
            android:text="确认支付"
            android:gravity="center"
            />
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>