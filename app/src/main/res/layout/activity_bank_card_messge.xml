<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/base_title_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="106dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="72dip"
        android:background="@drawable/item_t_w">
    <ImageView
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:background="@mipmap/home_activity_11"
        android:scaleType="fitXY"
        android:alpha="0.1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-30dip"
        android:layout_marginBottom="-40dip"
        android:visibility="gone"
        />
    <ImageView
        android:layout_width="29dip"
        android:layout_height="32dip"
        android:layout_marginLeft="22dip"
        android:layout_marginTop="14dip"
        android:src="@mipmap/home_activity_11"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/item_mycard_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff000000"
        android:textSize="16dip"
        android:layout_marginLeft="68dip"
        android:layout_marginTop="10dip"
        />
    <TextView
        android:id="@+id/card_type"
        android:layout_width="89dp"
        android:layout_height="20dp"
        android:text=""
        android:textColor="#ff000000"
        android:textSize="13dip"
        android:layout_marginLeft="68dip"
        android:layout_marginTop="32dip"
        />
    <TextView
        android:id="@+id/item_mycard_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff333333"
        android:textSize="25dip"
        android:layout_marginLeft="68dip"
        android:layout_marginTop="49dip"
        />
    </RelativeLayout>
    <TextView
        android:id="@+id/submit_card"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/home_repay_r"
        android:layout_marginLeft="36dip"
        android:layout_marginRight="36dip"
        android:layout_marginTop="360dip"
        android:text="管理"
        android:gravity="center"
        android:textSize="23sp"
        android:textStyle="bold"
        />
</RelativeLayout>