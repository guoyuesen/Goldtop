<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img"
        android:layout_width="109dip"
        android:layout_height="65dip"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="16dip"
        android:src="@mipmap/yhk__001"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="光大白金卡"
        android:textColor="#ff333333"
        android:textSize="13sp"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="140dip"
        />
    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刷卡送大额出行礼包 双倍积分尊享礼遇"
        android:textColor="#ffa3a7ac"
        android:textSize="10sp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="40dip"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="66dip"
        android:layout_marginLeft="141dip"
        >
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="额度高"
            android:textColor="#ffff525b"
            android:textSize="9sp"
            android:gravity="center"
            android:background="@drawable/new_home_tb"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="审批快"
            android:textColor="#ffff525b"
            android:textSize="9sp"
            android:gravity="center"
            android:background="@drawable/new_home_tb"
            android:paddingRight="5dip"
            android:paddingLeft="5dip"
            android:layout_marginLeft="5dip"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/btn"
        android:layout_width="76dip"
        android:layout_height="25dip"
        android:background="@drawable/new_home_bg2"
        android:text="立即申请"
        android:textColor="#ff333333"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="60dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23dip"
        android:visibility="invisible"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#f0f0f0"
        android:layout_marginTop="109dip"
        android:layout_marginLeft="15dip"
        />
</RelativeLayout>