<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f0f0f0"
    android:layout_height="match_parent">
    <include layout="@layout/base_title_layout"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:layout_marginTop="62dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

            <TextView
                android:id="@+id/news_tabhost1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="活动福利"
                android:textColor="#ff000000"
                android:textSize="16dip"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/news_tabhost2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="订单通知"
                android:textColor="#888888"
                android:textSize="16dip"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />


            <TextView
                android:id="@+id/news_tabhost3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="系统通知"
                android:textColor="#888888"
                android:textSize="16dip"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
    </LinearLayout>
    <View
        android:id="@+id/news_tabb"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:background="#fffece00"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-42dip"
        android:layout_marginBottom="0.5dp"
    />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#e4e4e4"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
<ListView
    android:id="@+id/news_tab1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="113dip"
    android:visibility="visible"
    android:padding="10dip"
    android:dividerHeight="10dip"
    android:divider="@color/transparent"
    android:scrollbars="none"
    ></ListView>
    <ListView
        android:id="@+id/news_tab2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="113dip"
        android:visibility="gone"
        android:padding="10dip"
        android:dividerHeight="10dip"
        android:divider="@color/transparent"
        android:scrollbars="none"
        ></ListView>
    <ListView
        android:id="@+id/news_tab3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="113dip"
        android:visibility="gone"
        android:padding="10dip"
        android:dividerHeight="10dip"
        android:divider="@color/transparent"
        android:scrollbars="none"
        ></ListView>
    <LinearLayout
        android:id="@+id/is_nonews"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="113dip"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:paddingTop="63dip"
        >
        <ImageView
            android:layout_width="212dip"
            android:layout_height="210dip"
            android:src="@mipmap/nonews"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哎呀～您暂时没有新消息哦！"
            android:textColor="#ff888888"
            android:textSize="15sp"
            android:layout_marginTop="30dip"
            />
    </LinearLayout>

</RelativeLayout>