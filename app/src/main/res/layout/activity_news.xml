<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f9f9f9"
    android:layout_height="match_parent">
    <include layout="@layout/base_title_layout"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="57dip"
    android:layout_marginTop="62dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

            <TextView
                android:id="@+id/news_tabhost1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="活动福利"
                android:textColor="#ff000000"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/news_tabhost2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="订单通知"
                android:textColor="#ff000000"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />


            <TextView
                android:id="@+id/news_tabhost3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="系统通知"
                android:textColor="#ff000000"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
    </LinearLayout>
    <View
        android:id="@+id/news_tabb"
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:background="#fffece00"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-42dip"
    />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#ff1c1c1c"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
<ListView
    android:id="@+id/news_tab1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="120dip"
    android:visibility="visible"
    android:padding="10dip"
    android:dividerHeight="10dip"
    android:divider="@color/transparent"
    android:scrollbars="none"
    ></ListView>
    <ListView
        android:id="@+id/news_tab2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dip"
        android:visibility="gone"
        android:padding="10dip"
        android:dividerHeight="10dip"
        android:divider="@color/transparent"
        android:scrollbars="none"
        ></ListView>
    <ListView
        android:id="@+id/news_tab3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dip"
        android:visibility="gone"
        android:padding="10dip"
        android:dividerHeight="10dip"
        android:divider="@color/transparent"
        android:scrollbars="none"
        ></ListView>

</RelativeLayout>