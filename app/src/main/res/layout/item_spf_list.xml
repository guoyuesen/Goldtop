<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dip"
        android:background="@color/white"
        android:layout_margin="5dip"
        android:elevation="1dip"
        >
        <ImageView
            android:id="@+id/item_sp_img"
            android:layout_width="match_parent"
            android:layout_height="109dip"
            android:src="@mipmap/home_img_007"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/item_sp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LB瓷质美肌蚕丝面膜 "
            android:textColor="#ff333333"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="126dip"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="2dip"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/item_sp_jf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥399.00"
            android:textColor="#ffff525b"
            android:textSize="12sp"
            android:layout_marginTop="159dip"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</RelativeLayout>