<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_margin="0.5dip"
        >
        <ImageView
            android:id="@+id/item_sp_img"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@mipmap/fragment_shping_03"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="51dip"
            android:layout_height="16dip"
            android:background="@mipmap/fragment_shping_02"
            android:layout_marginTop="18dip"
            android:layout_marginRight="10dip"
            android:text="热门推荐"
            android:textColor="#ffffffff"
            android:textSize="10dip"
            android:gravity="center"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:layout_width="13dip"
            android:layout_height="13dip"
            android:layout_marginLeft="131dip"
            android:layout_marginTop="102dip"
            android:background="@mipmap/fragment_shping_04"
            />
        <TextView
            android:id="@+id/item_sp_jf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textColor="#ffff7f00"
            android:textSize="20dip"
            android:layout_marginTop="92dip"
            android:layout_marginLeft="148dip"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分"
            android:textColor="#ffff7f00"
            android:textSize="13dip"
            android:layout_marginTop="100dip"
            android:layout_toRightOf="@+id/item_sp_jf"
            android:layout_marginLeft="2dip"
            />
        <TextView
            android:id="@+id/item_sp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dip"
            android:text="智能温度计"
            android:textColor="#ff686868"
            android:textSize="14dip"
            android:layout_marginLeft="130dip"
            android:layout_marginTop="15dip"
            android:layout_marginRight="79dip"
            />
        <TextView
            android:layout_width="74dip"
            android:layout_height="24dip"
            android:gravity="center"
            android:text="立即兑换"
            android:textColor="#ffff7f00"
            android:textSize="12dip"
            android:layout_marginTop="98dip"
            android:layout_marginBottom="15dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/button_transparent_ff7f00"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</RelativeLayout>