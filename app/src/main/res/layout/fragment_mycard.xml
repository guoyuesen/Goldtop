<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ListView
        android:id="@+id/my_card_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:dividerHeight="15dip"
        android:divider="@color/transparent"
        android:padding="10dip"
        ></ListView>
    <LinearLayout
        android:id="@+id/my_card_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_care_em"
            />
        <TextView
            android:id="@+id/my_card_empty_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无储蓄卡"
            android:textColor="#ff333333"
            android:layout_marginTop="14dip"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/my_card_empty_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哎呀～您没有绑定储蓄卡哦！"
            android:textColor="#ff888888"
            android:textSize="15sp"
            android:layout_marginTop="3dip"
            />
        <LinearLayout
            android:id="@+id/my_card_empty_btn"
            android:layout_width="200dip"
            android:layout_height="48dip"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dip"
            android:background="@drawable/home_repay_rn"
            android:layout_marginTop="15dip"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dip"
                android:text="+ "
                android:layout_marginTop="-2dp"
                android:textColor="@color/titlecolor"
                />
            <TextView
                android:id="@+id/my_card_footer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:text="添加信用卡"
                android:textColor="@color/titlecolor"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>