<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<include layout="@layout/base_title_layout"/>
    <View
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dip"
        android:background="@mipmap/redenvelopes"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="我的红包"
        android:textColor="#ff333333"
        android:textSize="16dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="217dip"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="237dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#ff333333"
            android:textSize="30dip"
            android:layout_gravity="start"
            android:paddingTop="10dip"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/envelopes_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="#ff333333"
            android:textSize="50dip"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="143dip"
        android:layout_marginTop="342dip"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:text="提现金额"
            android:textColor="#ff333333"
            android:textSize="15dip"
            android:layout_marginTop="18dip"
            android:layout_marginLeft="14dip"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#ff333333"
            android:textSize="25dip"
            android:layout_marginLeft="16dip"
            android:layout_marginTop="62dip"
            />
        <EditText
            android:id="@+id/envelopes_out_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dip"
            android:layout_marginLeft="30dip"
            android:background="@color/white"
            android:textSize="25dip"
            android:inputType="number"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#60080808"
            android:layout_marginLeft="13dip"
            android:layout_marginRight="13dip"
            android:layout_marginTop="100dip"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dip"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:paddingLeft="14dip"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="可提现金额为"
                android:textColor="#a3888888"
                android:textSize="14dip"
                />
            <TextView
                android:id="@+id/envelopes_ktx_money"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="500.00"
                android:textColor="#a3888888"
                android:textSize="14dip"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="元,"
                android:textColor="#a3888888"
                android:textSize="14dip"
                />
            <TextView
                android:id="@+id/envelopes_money_all"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="全部提现"
                android:textColor="#FEC700"
                android:textSize="14dip"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/envelopes_submit"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:text="提到钱包"
        android:textColor="#ff000000"
        android:textSize="17dip"
        android:gravity="center"
        android:background="@drawable/home_repay_r"
        android:layout_marginRight="25dip"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="522dip"
        />
</RelativeLayout>