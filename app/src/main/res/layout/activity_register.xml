<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/base_title_layout"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#80aaaaaa"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@color/white"
    >
    <EditText
        android:id="@+id/register_phone"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/white"
        android:hint="请输入手机号"
        android:textSize="15sp"
        android:inputType="number"
        android:layout_marginLeft="100dip"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
       android:layout_marginLeft="14dip"
        android:text="手机号码"
        android:textColor="#A2A2A2"
        android:textSize="15sp"
        android:gravity="center_vertical"
        />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#80aaaaaa"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        >

        <EditText
            android:id="@+id/register_verification"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@color/white"
            android:layout_marginLeft="100dip"
            android:hint="请输入验证码"
            android:textSize="15sp"
            android:paddingRight="83dip"
            android:inputType="number"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dip"
            android:text="验证码"
            android:textColor="#A2A2A2"
            android:textSize="15sp"
            android:gravity="center_vertical"
            />
        <com.goldtop.gys.crdeit.goldtop.view.DateButton
            android:id="@+id/register_datebtn"
            android:layout_width="83dip"
            android:layout_height="28dip"
            android:text="获取验证码"
            android:textColor="#fffece00"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:layout_centerVertical="true"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#80aaaaaa"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        >

        <EditText
            android:id="@+id/register_pass01"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dip"
            android:background="@color/white"
            android:hint="请输入密码"
            android:textSize="15sp"
            android:inputType="textPassword"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dip"
            android:text="输入密码"
            android:textColor="#A2A2A2"
            android:textSize="15sp"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#80aaaaaa"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        >

        <EditText
            android:id="@+id/register_pass02"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:layout_marginLeft="100dip"
            android:hint="请确认密码"
            android:textSize="15sp"
            android:inputType="textPassword"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dip"
            android:text="确认密码"
            android:textColor="#A2A2A2"
            android:textSize="15sp"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#80aaaaaa"
        />
    <RelativeLayout
        android:id="@+id/update_pass"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        >

        <EditText
            android:id="@+id/register_activation"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@color/white"
            android:hint="请输入邀请码（选填）"
            android:textSize="15sp"
            android:layout_marginLeft="100dip"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dip"
            android:text="邀请码"
            android:textColor="#A2A2A2"
            android:textSize="15sp"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/register_submit"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/home_repay_r"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dip"
        android:layout_marginTop="42dip"
        android:text="立即注册"
        android:textColor="#ff000000"
        android:textSize="18sp"
        android:elevation="3dip"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账户？"
            android:textColor="#ff888888"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即登录"
            android:textColor="#FEC700"
            android:textSize="15sp"
            android:id="@+id/register_login"
            />
    </LinearLayout>
</RelativeLayout>

</LinearLayout>