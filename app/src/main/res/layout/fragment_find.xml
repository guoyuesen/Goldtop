<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f9f9f9"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="66dip"
    android:paddingTop="22dp"
    android:background="@drawable/home_title_color"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

            <TextView
                android:id="@+id/fragment_find_tabhost1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="推荐"
                android:textColor="#ff000000"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/fragment_find_tabhost2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="推荐"
                android:textColor="#ff000000"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />


            <TextView
                android:id="@+id/fragment_find_tabhost3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="推荐"
                android:textColor="#ff000000"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />


            <TextView
                android:id="@+id/fragment_find_tabhost4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="推荐"
                android:textColor="#ff000000"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
    </LinearLayout>
    <View
        android:id="@+id/fragment_find_tabb"
        android:layout_width="40dp"
        android:layout_height="2dp"
        android:background="#ff000000"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-42dip"
    />
</RelativeLayout>
<ListView
    android:id="@+id/fragment_find_tab1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="66dip"
    android:visibility="visible"
    android:divider="#f0f0f0"
    android:dividerHeight="0.5dip"
    ></ListView>
    <ListView
        android:id="@+id/fragment_find_tab2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="66dip"
        android:visibility="gone"
        android:divider="#f0f0f0"
        android:dividerHeight="0.5dip"
        ></ListView>
    <ListView
        android:id="@+id/fragment_find_tab3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="66dip"
        android:visibility="gone"
        android:divider="#f0f0f0"
        android:dividerHeight="0.5dip"
        ></ListView>
    <ListView
        android:id="@+id/fragment_find_tab4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="66dip"
        android:visibility="gone"
        android:divider="#f0f0f0"
        android:dividerHeight="0.5dip"
        ></ListView>

</RelativeLayout>