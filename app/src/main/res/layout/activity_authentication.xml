<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<include layout="@layout/base_title_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:layout_marginTop="10dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="#ff333333"
            android:textSize="16dip"
            android:layout_marginLeft="14dip"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/authen_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dip"
            android:hint="请输入真实姓名"
            android:textSize="16dip"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:layout_marginTop="0.2dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证"
            android:textColor="#ff333333"
            android:textSize="16dip"
            android:layout_marginLeft="14dip"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/authen_idnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dip"
            android:hint="请输入身份证号"
            android:textSize="16dip"
            android:maxLength="18"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:layout_marginTop="0.2dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡"
            android:textColor="#ff333333"
            android:textSize="16dip"
            android:layout_marginLeft="14dip"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/authen_cardnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dip"
            android:hint="请填写储蓄卡卡号"
            android:textSize="16dip"
            android:inputType="number"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:layout_marginTop="0.2dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行名称"
            android:textColor="#ff333333"
            android:textSize="16dip"
            android:layout_marginLeft="14dip"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/authen_yhmc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dip"
            android:hint="请输入银行名称"
            android:textSize="16dip"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:layout_marginTop="0.2dip"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开户行省市"
            android:textColor="#ff333333"
            android:textSize="16dip"
            android:layout_marginLeft="14dip"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/authen_khhss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dip"
            android:hint="请选择"
            android:textSize="16dip"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:layout_marginTop="0.2dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开户行"
            android:textColor="#ff333333"
            android:textSize="16dip"
            android:layout_marginLeft="14dip"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/authen_khh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dip"
            android:hint="请选择"
            android:textSize="16dip"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:layout_marginTop="0.2dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="#ff333333"
            android:textSize="16dip"
            android:layout_marginLeft="14dip"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/authen_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dip"
            android:hint="请输入银行预留手机号"
            android:textSize="16dip"
            android:inputType="number"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/authen_submit"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/home_repay_r"
        android:layout_marginTop="90dip"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ff000000"
        android:textSize="17dip"
        />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/zhxz_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/zhxz_nr"
            android:layout_width="match_parent"
            android:layout_height="500dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/zhihangxzbg"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择地区"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:textSize="18dip"
                    />
                <ImageView
                    android:id="@+id/zhxz_close"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:padding="10dp"
                    android:src="@mipmap/close1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    />
            </RelativeLayout>
            <EditText
                android:id="@+id/like"
                android:layout_width="match_parent"
                android:layout_height="32dip"
                android:hint="搜索"
                android:gravity="center"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/editext_bg"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:background="#f9f9f9"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/zhxz_t1"
                    android:layout_width="150dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="18dip"
                    android:text=""
                    android:hint="请选择"
                    android:singleLine="true"
                    android:paddingLeft="10dip"
                    />
                <TextView
                    android:id="@+id/zhxz_t2"
                    android:layout_width="100dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="18dip"
                    android:text=""
                    android:hint="请选择"
                    android:layout_marginLeft="150dip"
                    android:singleLine="true"
                    />
                <View
                    android:id="@+id/view_sheng"
                    android:layout_width="40dip"
                    android:layout_height="2dip"
                    android:background="@color/titlecolor"
                    android:layout_marginLeft="65dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dip"
                    />
                <View
                    android:id="@+id/view_shi"
                    android:layout_width="40dip"
                    android:layout_height="2dip"
                    android:background="@color/titlecolor"
                    android:layout_marginLeft="180dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dip"
                    />
            </RelativeLayout>

                <ListView
                    android:id="@+id/zhxz_ss"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:padding="10dip"
                    android:visibility="gone"
                    ></ListView>
                <LinearLayout
                    android:id="@+id/zhxz_em"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ProgressBar
                        android:id="@+id/pb_load"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:indeterminateDrawable="@drawable/progressbar"
                    android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/pb_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂无相关信息!"
                        />
                </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>