<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/base_title_layout"/>
    <RelativeLayout
        android:id="@+id/settings_01"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginTop="10dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="账户与安全"
            android:textColor="#ff333333"
            android:textSize="16dip"
            />
        <ImageView
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_alignParentRight="true"
            android:src="@mipmap/more"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/settings_02"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginTop="0.3dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="帮助与反馈"
            android:textColor="#ff333333"
            android:textSize="16dip"
            />
        <ImageView
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_alignParentRight="true"
            android:src="@mipmap/more"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/settings_03"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginTop="0.3dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="关于金陀螺"
            android:textColor="#ff333333"
            android:textSize="16dip"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="43dip"
            android:text="版本 0.0.7"
            android:textColor="#ffd4d4d4"
            android:textSize="14dip"
            />
        <ImageView
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_alignParentRight="true"
            android:src="@mipmap/more"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/settings_04"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginTop="74dip"
        android:text="退出登录"
        android:textColor="#ffff7f00"
        android:textSize="16dip"
        >

    </TextView>
</LinearLayout>