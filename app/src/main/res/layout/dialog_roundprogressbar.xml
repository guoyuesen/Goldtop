<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/transparent"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_t_e"
        >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="亲爱的金陀螺用户，您辛苦啦！"
        android:textColor="#ff333333"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dip"
        />
    <TextView
        android:id="@+id/bar_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在这个版本中，我们提升了稳定性，优化了性能，只为了您能有更流畅更好的体验。祝您工作愉快！"
        android:textColor="#ff333333"
        android:textSize="15sp"
        android:layout_marginTop="60dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        />
    <com.goldtop.gys.crdeit.goldtop.view.RoundProgressBar
        android:id="@+id/bar"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dip"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#aaaaaaaa"
        android:layout_marginTop="238dip"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dip"
        android:textSize="20dip"
        android:text="更新中···"
        android:textColor="#bbbbbb"
        />
    </RelativeLayout>
</RelativeLayout>