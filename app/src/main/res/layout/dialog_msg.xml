<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="233dip"
    android:background="@drawable/dialog_bg"
    >
    <TextView
        android:id="@+id/paypass_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="办理确认"
        android:textColor="#ff000000"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        />
    <ImageView
        android:id="@+id/paypass_close"
        android:layout_width="54dip"
        android:layout_height="54dip"
        android:padding="19dip"
        android:layout_alignParentRight="true"
        android:src="@mipmap/close1"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="59dip"
        android:background="#f0f0f0"
        android:layout_marginRight="21dip"
        android:layout_marginLeft="21dip"
        />
    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dip"
        android:paddingLeft="35dip"
        android:paddingRight="35dip"
        android:gravity="center"
        android:text="请确认办理型号为MP70的POS机，点击确认后工作人员将尽快与您联系"
        />
    <TextView
        android:id="@+id/paypass_submit"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="161dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/home_title_color"
        android:gravity="center"
        android:textColor="#333333"
        android:text="确定"
        />
</RelativeLayout>
</RelativeLayout>