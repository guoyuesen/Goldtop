<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="5dip"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
    <ImageView
        android:id="@+id/home_card_icon"
        android:layout_width="21dip"
        android:layout_height="21dip"
        android:src="@mipmap/home_activity_11"
        android:layout_marginLeft="11dip"
        />
    <TextView
        android:id="@+id/home_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="工行"
        android:textColor="#ff000000"
        android:textSize="15sp"
        android:layout_marginLeft="11dip"
        />
    <TextView
        android:id="@+id/home_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="李四"
        android:textColor="#ff999999"
        android:textSize="15sp"
        android:layout_marginLeft="11dip"
        />
    <TextView
        android:id="@+id/home_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7788"
        android:textColor="#ff999999"
        android:textSize="15sp"
        android:layout_marginLeft="11dip"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/home_card_money1"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:text="10000.00"
        android:textColor="#ff000000"
        android:textSize="17sp"
        android:layout_marginTop="51dip"
        android:layout_marginLeft="13dip"
        android:textStyle="bold"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/home_card_money2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000.00"
        android:textColor="#ff000000"
        android:textSize="17sp"
        android:layout_marginTop="51dip"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:text="本期应还"
        android:textColor="#ff999999"
        android:textSize="13sp"
        android:layout_marginTop="72dip"
        android:layout_marginLeft="13dip"
        android:gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剩余额度"
        android:textColor="#ff999999"
        android:textSize="13sp"
        android:layout_marginTop="72dip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dip"
        />
    <Button
        android:id="@+id/repayment"
        android:layout_width="84dip"
        android:layout_height="28dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:layout_marginTop="54dip"
        android:background="@drawable/button_yl_gray"
        android:text="立即还款"
        android:textColor="@color/white"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="13sp"
        />
    </RelativeLayout>
</RelativeLayout>