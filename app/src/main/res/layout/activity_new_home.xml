                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热销产品"
                    android:textColor="#ff333333"
                    android:textSize="17sp"
                    android:layout_marginTop="27dip"
                    android:layout_marginLeft="16dip"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="#ffbcbcbc"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="31dip"
                    android:layout_marginRight="14dip"
                    />
                <com.goldtop.gys.crdeit.goldtop.view.HorizontalListView
                    android:id="@+id/horizontal_list"
                    android:layout_width="match_parent"
                    android:layout_height="237dip"
                    android:layout_marginTop="71dip"
                    android:scrollbars="none"
                    ></com.goldtop.gys.crdeit.goldtop.view.HorizontalListView>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="#f0f0f0"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信用卡办理"
                    android:textColor="#ff333333"
                    android:textSize="17sp"
                    android:layout_marginTop="27dip"
                    android:layout_marginLeft="16dip"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/new_home_card"
                    android:layout_width="100dip"
                    android:layout_height="40dip"
                    android:text="更多"
                    android:textColor="#ffbcbcbc"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dip"
                    android:layout_marginRight="14dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="65dip"
                    />
                <LinearLayout
                    android:id="@+id/new_home_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="60dip"
                    ></LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>