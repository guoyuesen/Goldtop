<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            >
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="184dip"
            android:layout_marginTop="22dip"
            android:visibility="visible"
            android:clipChildren="false"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
        ></android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="14dip"
            android:layout_height="12dip"
            android:layout_marginLeft="14dip"
            android:src="@mipmap/laba"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公告：商城任意选购399元产品即可免费获得会员特权"
            android:textColor="#ff333333"
            android:textSize="12sp"
            android:layout_marginLeft="5dip"
            android:maxLines="1"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#f0f0f0"
        android:layout_marginLeft="14dip"
        android:layout_marginRight="14dip"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dip"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/item_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="51dip"
                android:layout_height="44dip"
                android:src="@mipmap/home_img_001"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信用卡还款"
                android:textColor="#ff333333"
                android:textSize="12sp"
                android:layout_marginTop="5dip"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="44dip"
                android:layout_height="44dip"
                android:src="@mipmap/home_img_002"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POS机办理"
                android:textColor="#ff333333"
                android:textSize="12sp"
                android:layout_marginTop="5dip"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="44dip"
                android:layout_height="44dip"
                android:src="@mipmap/home_img_003"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="法律咨询"
                android:textColor="#ff333333"
                android:textSize="12sp"
                android:layout_marginTop="5dip"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="44dip"
                android:layout_height="44dip"
                android:src="@mipmap/home_img_004"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APP定制"
                android:textColor="#ff333333"
                android:textSize="12sp"
                android:layout_marginTop="5dip"
                />
        </LinearLayout>
    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96dip"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/item_05"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="44dip"
                        android:layout_height="44dip"
                        android:src="@mipmap/new_home_jf"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分商城"
                        android:textColor="#ff333333"
                        android:textSize="12sp"
                        android:layout_marginTop="5dip"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_06"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="44dip"
                        android:layout_height="44dip"
                        android:src="@mipmap/new_home_zx"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热门资讯"
                        android:textColor="#ff333333"
                        android:textSize="12sp"
                        android:layout_marginTop="5dip"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_07"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="44dip"
                        android:layout_height="44dip"
                        android:src="@mipmap/new_home_xyk"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="信用卡办理"
                        android:textColor="#ff333333"
                        android:textSize="12sp"
                        android:layout_marginTop="5dip"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_08"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="44dip"
                        android:layout_height="44dip"
                        android:src="@mipmap/home_img_004"
                        android:visibility="gone"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APP定制"
                        android:textColor="#ff333333"
                        android:textSize="12sp"
                        android:layout_marginTop="5dip"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="#f0f0f0"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager2"
        android:layout_width="match_parent"
        android:layout_height="91dip"
        >
    </android.support.v4.view.ViewPager>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="#f0f0f0"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="318dip"
                android:visibility="visible"
