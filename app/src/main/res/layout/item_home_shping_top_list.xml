<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    >
    <RelativeLayout
        android:layout_width="164dip"
        android:layout_height="227dip"
        android:background="@color/white"
        android:layout_margin="5dip"
        android:elevation="1dip"
        >
<ImageView
    android:id="@+id/top_list_img"
    android:layout_width="164dip"
    android:layout_height="171dip"
    android:src="@mipmap/dingdan"
    />
    <TextView
        android:layout_width="51dip"
        android:layout_height="16dip"
        android:background="@mipmap/fragment_shping_02"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dip"
        android:layout_marginRight="5dip"
        android:text="赠送会员"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:gravity="center"
        />
        <TextView
            android:id="@+id/top_list_name"
            android:layout_width="match_parent"
            android:layout_height="17dip"
            android:layout_marginTop="179dip"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:text=""
            />
        <TextView
            android:id="@+id/top_list_money"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginTop="202dip"
            android:layout_marginLeft="7dip"
            android:text="¥399.00"
            android:textColor="#ffff7f00"
            android:textSize="12sp"
            />
    </RelativeLayout>
</RelativeLayout>