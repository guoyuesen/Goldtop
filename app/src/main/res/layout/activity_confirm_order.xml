<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/base_title_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="62dip"
        android:layout_marginBottom="46dip"
        android:paddingTop="1dip"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="397dip"
                android:background="@drawable/confirm_order"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="172dip"
                android:layout_margin="10dip"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dip"
                >
                <RelativeLayout
                    android:id="@+id/order_address_to"
                    android:layout_width="match_parent"
                    android:layout_height="94dip">
                    <TextView
                        android:id="@+id/order_address"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="#ff000000"
                        android:textSize="14sp"
                        android:layout_marginRight="26dip"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/order_nameandphone"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text=""
                        android:textColor="#ff000000"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="58dip"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/order_add_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="添加地址"
                        android:textSize="20dip"
                        android:gravity="center"
                        android:visibility="visible"
                        />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="#bbbbbb"
                    android:layout_marginBottom="10dip"
                    />
                <RelativeLayout
                    android:id="@+id/order_pay_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="支付方式"
                        android:textColor="#ff000000"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/order_paytype_text"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="微信支付"
                        android:textColor="#ffc5c4c4"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dip"
                        />
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/more"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginBottom="36dip"
                android:padding="10dip"
                android:background="@color/white"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="14dip"
                        android:layout_height="13dip"
                        android:src="@mipmap/login_icon"
                        android:layout_marginTop="1.5dip"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="金陀螺科技"
                        android:textColor="#ff000000"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dip"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="#bbbbbb"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/order_commodity_img"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:background="@drawable/confirm_order"
                        android:layout_marginTop="5dip"
                        />
                    <TextView
                        android:id="@+id/order_commodity_text"
                        android:layout_width="match_parent"
                        android:layout_height="51dip"
                        android:layout_marginLeft="113dip"
                        android:text=""
                        android:textColor="#ff686868"
                        android:textSize="14sp"
                        />
                    <ImageView
                        android:layout_width="49dip"
                        android:layout_height="16dip"
                        android:src="@mipmap/confirm_order"
                        android:layout_marginLeft="113dip"
                        android:layout_marginTop="65dip"
                        />
                    <TextView
                        android:id="@+id/order_commodity_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥0.00"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:layout_marginLeft="113dip"
                        android:layout_marginTop="85dip"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x 1"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:layout_marginTop="85dip"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="#bbbbbb"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="店铺优惠"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="包邮"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="#bbbbbb"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="配送方式"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        />
                    <ImageView
                        android:layout_width="36dip"
                        android:layout_height="14dip"
                        android:layout_marginTop="13dip"
                        android:src="@mipmap/confirm_order00"
                        android:layout_marginLeft="65dip"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="免快递费"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="#bbbbbb"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="买家留言："
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        />
                    <EditText
                        android:id="@+id/order_commodity_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginLeft="75dip"
                        android:textSize="14sp"
                        android:hint="选填"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="#bbbbbb"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dip">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="共1件商品 小计： "
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="65dip"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:id="@+id/order_money01"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="¥399.00"
                        android:textColor="#ffff525b"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/order_money02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="¥399.00"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:background="#333333"
            android:gravity="center_vertical"
            android:paddingLeft="23dip"
            android:layout_marginRight="86dip"
            />
        <TextView
            android:id="@+id/order_go_pay"
            android:layout_width="86dip"
            android:layout_height="match_parent"
            android:text="去结算"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="#FECE00"
            />
    </RelativeLayout>
</RelativeLayout>