                android:layout_height="match_parent"
                android:text="0次"
                android:textColor="#ffff7f00"
                android:textSize="16dip"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
