<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scaleType="fitXY"
    android:src="@mipmap/login_05"
    android:id="@+id/imageView"></ImageView>
    <ImageView
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:id="@+id/login_close"
        android:src="@mipmap/close"
        android:padding="10dip"
        android:layout_marginTop="46dip"
        android:layout_marginLeft="27dip"
        />
    <RelativeLayout
        android:id="@+id/login_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@mipmap/login_01"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        >
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="13dip"
    android:layout_centerHorizontal="true"
    android:src="@mipmap/login_icon"
    />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dip"
            android:layout_marginLeft="38dip"
            android:src="@mipmap/login_02"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="162dip"
            android:layout_marginLeft="38dip"
            android:src="@mipmap/login_02"
            />
<EditText
    android:id="@+id/login_phone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="72dip"
    android:layout_marginTop="83dip"
    android:hint="请输入您的手机号"
    android:textSize="16sp"
    android:layout_marginRight="29dip"
    android:inputType="number"
    android:theme="@style/MyEditText"
    />
        <EditText
            android:id="@+id/login_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dip"
            android:layout_marginTop="152dip"
            android:hint="请输入密码"
            android:textSize="16sp"
            android:layout_marginRight="29dip"
            android:inputType="textPassword"
            android:theme="@style/MyEditText"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/login_submit"
        android:layout_width="182dip"
        android:layout_height="48dip"
        android:layout_below="@+id/login_relative"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:background="@drawable/home_repay_r"
        android:text="登录"
        android:textColor="#000000"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/login_submit"
        android:layout_marginTop="21dip"
        >
        <TextView
            android:id="@+id/login_getpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:text="忘记密码 "
            android:textColor="#ff9e9e9e"
            android:textSize="14sp"
            />
        <View
            android:layout_width="0.5dip"
            android:layout_height="12dip"
            android:background="#ffd8d8d8"
            />
        <TextView
            android:id="@+id/login_crate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="现在注册 "
            android:textColor="#ff9e9e9e"
            android:textSize="14sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#30c5c4c4"
        android:layout_below="@+id/login_submit"
        android:layout_marginTop="70dip"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他登陆方式"
        android:textColor="#ff333333"
        android:textSize="13sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_submit"
        android:layout_marginTop="50dip"
        android:padding="10dip"
        android:background="#f9f9f9"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_04"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_submit"
        android:layout_marginTop="90dip"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信"
        android:textColor="#ff333333"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_submit"
        android:layout_marginTop="141dip"
        />
</RelativeLayout>