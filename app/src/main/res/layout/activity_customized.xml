<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/white"
    >
    <LinearLayout
        android:id="@+id/customized"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="23dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="7dip"
            />
        <ImageView
            android:id="@+id/img3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="16dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            />
        <ImageView
            android:id="@+id/img4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            />
        <ImageView
            android:id="@+id/img5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="28dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            />
        <ImageView
            android:id="@+id/img6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="24dip"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            />
        <TextView
            android:id="@+id/customized_submit"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="#ffffdc45"
            android:layout_marginRight="17dip"
            android:layout_marginLeft="17dip"
            android:layout_marginTop="45dip"
            android:text="立即咨询"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成都金陀螺网络科技有限公司"
            android:textColor="#ff99999b"
            android:textSize="11sp"
            android:layout_marginTop="38dip"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蜀ICP备18025194号-1"
            android:textColor="#ff99999b"
            android:textSize="11sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            />
        <View
            android:layout_width="247dip"
            android:layout_height="1dip"
            android:background="#f0f0f0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dip"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dip"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="15dip"
                android:layout_height="15dip"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成都市武侯区吾悦广场2座1205"
                android:textColor="#ff99999b"
                android:textSize="11sp"
                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
    <ImageView
        android:id="@+id/back_to"
        android:layout_width="28dip"
        android:layout_height="28dip"
        android:layout_marginLeft="15dip"
        android:src="@mipmap/sp_info_img"
        android:layout_marginTop="35dip"
        />
</RelativeLayout>